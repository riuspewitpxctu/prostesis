void setup(){

    Serial.begin(9600);
    
    sensorDS18B20.begin();

    for (int i=0; i<11; i++)
       pinMode(i, OUTPUT);
    for (int i=0; i<11; i++)
       pinMode(i, INPUT);
 
}

